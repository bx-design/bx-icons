{
  "name": "@bx-design/icons",
  "version": "0.1.1",
  "description": "Collection of BX Design System icons",
  "repository": "git@github.com:bx-design/bx-icons.git",
  "author": "BX Creative Studio",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./esm/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**",
    "esm/**"
  ],
  "scripts": {
    "build": "yarn build:esm && yarn build:cjs",
    "build:cjs": "rimraf ./dist && ncc build src/index.ts -o dist",
    "build:esm": "rimraf ./esm && tsc --module ES6 --outDir esm",
    "watch": "tsc --watch",
    "watch:esm": "tsc --module ES6 --outDir esm --target esnext --watch",
    "types:check": "tsc --noEmit",
    "format": "prettier --check --debug-check ./src",
    "format:fix": "prettier --write ./src",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn types:check && lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "yarn lint:fix",
      "yarn format:fix"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.13.0",
    "@babel/core": "^7.13.8",
    "@babel/preset-env": "^7.13.9",
    "@babel/preset-typescript": "^7.13.0",
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "@vercel/ncc": "^0.27.0",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^5.1.3",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.3",
    "typescript": "^4.2.2"
  }
}
